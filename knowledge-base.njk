---
pagination:
  data: collections.novel
  size: 1
  alias: novel
permalink: "/lore/{{ novel.fileSlug }}.json"
---
{
  "title": {{ novel.data.title | dump | safe }},
  "author": {{ novel.data.author | dump | safe }},
  "content": [
    {%- set novelSlug = novel.fileSlug %}
    {%- set chaptersForThisNovel = collections.chapter | filter(item => item.data.novel === novelSlug) | sort(false, false, 'fileSlug') %}
    {%- for chapter in chaptersForThisNovel %}
      {{- chapter.templateContent | dump | safe -}}{%- if not loop.last %},{% endif %}
    {%- endfor %}
  ]
}
